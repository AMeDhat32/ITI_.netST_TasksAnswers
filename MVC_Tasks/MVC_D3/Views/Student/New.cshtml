@model Student
<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
    <form action="/Student/Save" method="post">
        <div class="form-group">
            <label for="StudentName">Name</label>
            <input type="text" class="form-control" id="StudentName" placeholder="Enter Name" value="@Model?.Name" name="Name">
        </div>
        <div class="form-group">
            <label for="StudentAddress">Address</label>
            <input type="text" class="form-control" id="StudentAddress" placeholder="Address" value="@Model?.Address" Name="Address">
        </div>
        <div class="form-group">
            <label for="StudentGrade">Grade</label>
            <input type="text" class="form-control" id="StudentGrade" placeholder="Grade" value="@Model?.Grade" name="Grade">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>
</html>