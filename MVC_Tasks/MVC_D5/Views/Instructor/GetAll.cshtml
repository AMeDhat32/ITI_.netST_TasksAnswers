
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Salary</th>
            <th scope="col">Department</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var Instructor in Model)
        {
            <tr>
                <th scope="row">@Instructor.Id</th>
                <td>@Instructor.Name</td>
                <td>@Instructor.Salary</td>
                <td>
                    @if (Instructor.Department != null)
                    {
                        @Instructor.Department.Name
                    }
                    else
                    {
                        <span>No department yet</span>
                    }
                </td>
                <td><a asp-action="Edit" asp-controller="Instructor" asp-route-id="@Instructor.Id" class="btn btn-warning">Edit</a></td>
                <td><a asp-action="Details" asp-controller="Instructor" asp-route-id="@Instructor.Id" class="btn btn-info">Details</a></td>
                <td><a asp-action="Delete" asp-controller="Instructor" asp-route-id="@Instructor.Id" class="btn btn-danger">Delete</a></td>
                
              
            </tr>
        }



    </tbody>
</table>
<br />
<a asp-action="New" asp-controller="Instructor" class="btn btn-success">New</a>