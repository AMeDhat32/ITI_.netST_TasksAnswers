@model Course
@{
    SelectList depts = new SelectList(ViewBag.depts, "Id", "Name");
}

<html>
<head>
    <title>title</title>
</head>
<body>
    <form action="/Course/Save" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MinDegree"></label>
            <input asp-for="MinDegree" class="form-control" />
            <span asp-validation-for="MinDegree" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepartmentId"></label>
            <select class="form-control" asp-for="DepartmentId" asp-items="@depts"></select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>
</html>